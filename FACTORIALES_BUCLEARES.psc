Algoritmo FACTORIALES_BUCLEARES	
	Definir num,cont,resultado como real;
	Escribir"Ponme un numerín y te saco el factorial";
	Leer num; 
	resultado=1;
	cont=1;
	Mientras cont<=num Hacer
		resultado=(resultado)*(cont);
		cont=cont+1;
	FinMientras
	Escribir  "El factorial de " num " es " resultado;
	
	
	


FinAlgoritmo
